# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/restapi

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_EXPIRES_IN=15m

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=5
RATE_LIMIT_WINDOW=15

# File Uploads (if implementing file upload features)
MAX_FILE_SIZE=10
UPLOAD_PATH=uploads/

# Email Configuration (for future email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# API Documentation
ENABLE_DOCS=true
API_DOCS_URL=/api/docs

# Body Parser Limits
JSON_LIMIT=10mb
URLENCODED_LIMIT=10mb

# Session Configuration (if using sessions)
SESSION_SECRET=your-session-secret-change-this-in-production

# Redis Configuration (for caching, sessions, rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Google OAuth (if implementing OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Application URLs
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:3000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false